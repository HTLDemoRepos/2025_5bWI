@startuml Wingoiling
left to right direction

actor "User" as user

rectangle Wingfoiling {
  usecase "View Statistics" as UC1
  usecase "View Dashboard" as UC2
  usecase "View All Sessions" as UC3
  usecase "View Session Details" as UC4
  usecase "View Map" as UC5
  usecase "View Monthly Stats" as UC6
  usecase "View Yearly Stats" as UC7
  usecase "View Daily Stats" as UC8

  UC1 ..> UC6 : extends
  UC1 ..> UC7 : extends
  UC1 ..> UC8 : extends

  UC4 .> UC5 : include

  UC2 .> UC3 : include
  UC2 .> UC7 : include
}

user --> UC1
user --> UC2
user --> UC3
user --> UC4

@enduml
